{
    "overrides": [
        {
            "files": "*.ts",
            "options": {
                "semi": true,
                "singleQuote": true,
                "printWidth": 120,
                "trailingComma": "es5"
              }
        },
        {
            "files": "*.json",
            "options": {
                "trailingComma": "none",
                "tabWidth": 4,
                "semi": true,
                "singleQuote": true
            }
        },
        {
            "files": "*.sol",
            "options": {
                "printWidth": 80,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": false,
                "parser": "solidity-parse"
            }
        }
    ]
}